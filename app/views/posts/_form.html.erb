  <p class="content">
    <%= f.label :content %>
    <%= f.text_area :content, { :rows => 5, :tabindex => 3} %>
  </p>

  <%= f.fields_for :attachments do |attachment_form|  %>
    <p class="attachment"> 
      <%= attachment_form.file_field :attachment %>
      <%= attachment_form.link_to_remove "Remove this attachment", { :class => "remove_attachment" } %>
    </p>
  <% end -%>

  <%= f.link_to_add "Add an attachment", :attachments, { :class => "add_attachment", :tabindex => 5 }%>
  <%= f.select :filter, Post::Filters, {}, :tabindex => 4 %>
