<% if can? :read, t -%>
  <article <%= t.css_class %>>
    <h1><%= link_to t.title, messageboard_topic_posts_path(messageboard, t), class: already_read(t, @tracked_user_reads) %></h1>

    <% cache(["topic_condensed", t]) do %>
      <div  class="post_count"><%= t.posts_count %></div>
      <cite class="started_by">
        <abbr class="started_at timeago" title="<%= t.created_at.strftime("%Y-%m-%dT%H:%M:%SZ") %>"><%= t.created_at.strftime("%b %d, %Y %I:%M:%S %Z") %></abbr>
        <%= link_to t.user_name, user_path(t.user) %>
      </cite>
      <cite class="updated_by">
        <abbr class="updated_at timeago" title="<%= t.updated_at.strftime("%Y-%m-%dT%H:%M:%SZ") %>"><%= t.updated_at.strftime("%b %d, %Y %I:%M:%S %Z") %></abbr>
        <%= link_to t.last_user.name, user_path(t.last_user) %>
      </cite>
    <% end -%>

  </article>
<% end -%>
